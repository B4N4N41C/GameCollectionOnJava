<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.mochalin.laba6.controllers.GameController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <TextField fx:id="nameTF" promptText="Введите название игры" />
            <TextField fx:id="summaryTF" promptText="Введите описание игры" />
            <TextField fx:id="markTF" promptText="Введите оценку игры" />
            <Button mnemonicParsing="false" onAction="#onAddImg" text="Загрузить фото игры" />
            <Button mnemonicParsing="false" onAction="#onConfirm" text="Подтвердить" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
